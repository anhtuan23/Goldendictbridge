<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="bottom"
    android:layout_margin="14dp"
    android:layout_width="380dp"
    android:layout_height="200dp"
    card_view:cardElevation="12dp"
    app:layout_behavior="com.example.dotua.goldendictbridge.DirectTranslate_ScrollingCardViewBehavior">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvImage"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            fresco:placeholderImage="@drawable/background"
            fresco:actualImageScaleType="focusCrop"
            fresco:failureImage="@drawable/error"
            fresco:progressBarImage="@drawable/circular_progress_bar"
            fresco:progressBarImageScaleType="centerInside"
            fresco:progressBarAutoRotateInterval="1000"
            fresco:backgroundImage="@color/colorCardBackground"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
                <TextView
                    android:id="@+id/direct_translate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:background="@color/colorCardBackground"
                    android:textColor="@color/colorText"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="Direct Translation"
                    android:layout_gravity="center"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>

        </ScrollView>


        <!--<ImageView-->
            <!--android:id="@+id/overflow"-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_below="@id/thumbnail"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:scaleType="centerCrop"-->
            <!--android:src="@drawable/ic_dots" />-->

    </LinearLayout>


</android.support.v7.widget.CardView>